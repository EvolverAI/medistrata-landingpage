---
import "../styles/components/sticky-tabs.css";

const { tabs } = Astro.props;
---

<div class="sticky-tabs" data-tabs={JSON.stringify(tabs)}>
    <div class="tab-buttons"></div>
    <div class="sections">
        <slot />
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const containers = document.querySelectorAll(".sticky-tabs");
        containers.forEach((container) => {
            const tabButtons = container.querySelector(".tab-buttons");
            const sectionsContainer = container.querySelector(".sections");
            const sections = Array.from(sectionsContainer.children);
            const tabs = container.dataset.tabs
                ? JSON.parse(container.dataset.tabs)
                : sections.map((_, i) => `Tab ${i + 1}`);

            // Add class to sections for styling
            sections.forEach((section) => {
                section.classList.add("section");
            });

            // Create tab buttons
            tabs.forEach((tabName, index) => {
                const button = document.createElement("button");
                button.textContent = tabName;
                button.classList.add("tab-button");
                button.addEventListener("click", () => {
                    sections[index].scrollIntoView({ behavior: "smooth" });
                });
                tabButtons.appendChild(button);
            });

            // Set up intersection observer for scrollspy
            const observer = new IntersectionObserver(
                (entries) => {
                    entries.forEach((entry) => {
                        if (entry.isIntersecting) {
                            const index = sections.indexOf(entry.target);
                            const buttons =
                                tabButtons.querySelectorAll(".tab-button");
                            buttons.forEach((btn, i) => {
                                btn.classList.toggle("active", i === index);
                            });
                        }
                    });
                },
                { threshold: 0.5 },
            );

            sections.forEach((section) => observer.observe(section));
        });
    });
</script>
