<div class="tabs">
    <div class="tab-buttons"></div>
    <div class="tab-content">
        <slot />
    </div>
</div>

<style>
    .tabs {
        border-radius: 0.5rem;
        overflow: hidden;
        margin: 1rem 0;
    }

    .tab-buttons {
        display: flex;
        background-color: #f9f9f9;
    }

    :global(.tab-button) {
        background: #fff;
        border: 1px solid #ddd;
        padding: 1rem;
        cursor: pointer;
        flex: 1;
        text-align: center;
        transition: all 0.2s;
        margin: 0;
        position: relative;
    }

    :global(.tab-button:not(:last-child)) {
        border-right: none;
    }

    :global(.tab-button:hover) {
        background-color: #e9e9e9;
    }

    :global(.tab-button.active) {
        background-color: #2196f3;
        color: #fff;
        border-color: #2196f3;
    }

    .tab-content {
        padding: 1rem;
        border: 1px solid #ddd;
        border-top: none;
        background-color: #fff;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const tabsContainers = document.querySelectorAll(".tabs");
        tabsContainers.forEach((tabsContainer) => {
            const tabButtons = tabsContainer.querySelector(".tab-buttons");
            const tabContent = tabsContainer.querySelector(".tab-content");
            const tabs = tabContent.querySelectorAll("tab-component");

            tabs.forEach((tab, index) => {
                const name = tab.getAttribute("name");
                const button = document.createElement("button");
                button.textContent = name;
                button.classList.add("tab-button");
                if (index === 0) {
                    button.classList.add("active");
                } else {
                    tab.style.display = "none";
                }
                button.addEventListener("click", () => {
                    // Hide all tabs
                    tabs.forEach((t) => (t.style.display = "none"));
                    // Show selected tab
                    tab.style.display = "block";
                    // Update button states
                    tabButtons
                        .querySelectorAll(".tab-button")
                        .forEach((btn) => btn.classList.remove("active"));
                    button.classList.add("active");
                });
                tabButtons.appendChild(button);
            });
        });
    });
</script>
