<div class="contact-section" id="contact">
    <div class="contact-container">
        <div class="contact-header">
            <h2 class="contact-title">Get in Touch</h2>
            <p class="contact-subtitle">
                Ready to transform your healthcare data management? Contact us
                today.
            </p>
        </div>

        <div class="contact-grid">
            <div class="contact-card">
                <div class="contact-icon">üìß</div>
                <h3>Email</h3>
                <a href="mailto:info@medistrata.com" class="contact-link"
                    >info@medistrata.com</a
                >
            </div>

            <div class="contact-card">
                <div class="contact-icon">üìû</div>
                <h3>Phone</h3>
                <a href="tel:+1234567890" class="contact-link"
                    >+1 (234) 567-890</a
                >
            </div>

            <div class="contact-card">
                <div class="contact-icon">üìç</div>
                <h3>Address</h3>
                <p class="contact-text">
                    Healthcare Innovation Hub<br />123 Medical Plaza<br />San
                    Francisco, CA 94105
                </p>
            </div>
        </div>

        <div class="contact-form-wrapper">
            <form class="contact-form">
                <div class="form-row">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" id="name" name="name" required />
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" required />
                    </div>
                </div>

                <div class="form-group">
                    <label for="organization">Organization</label>
                    <input type="text" id="organization" name="organization" />
                </div>

                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea id="message" name="message" rows="5" required
                    ></textarea>
                </div>

                <button type="submit" class="btn btn-primary"
                    >Send Message</button
                >
            </form>
        </div>
    </div>
</div>

<style>
    .contact-section {
        padding: 7rem 2rem;
        background: #ffffff;
    }

    .contact-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .contact-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .contact-title {
        font-size: clamp(2rem, 4.5vw, 2.75rem);
        font-weight: 700;
        margin: 0 0 0.75rem 0;
        letter-spacing: -0.02em;
    }

    .contact-subtitle {
        font-size: 1.125rem;
        color: var(--muted);
        margin: 0;
    }

    .contact-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
        margin-bottom: 4rem;
    }

    .contact-card {
        text-align: center;
        padding: 2rem;
        border: 1px solid var(--line);
        border-radius: var(--radius-lg);
        transition: all 0.25s ease;
        background: #fff;
    }

    .contact-card:hover {
        box-shadow: var(--shadow);
        transform: translateY(-3px);
    }

    .contact-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .contact-card h3 {
        font-size: 1.125rem;
        font-weight: 700;
        margin: 0 0 0.5rem 0;
        color: var(--text);
    }

    .contact-link {
        color: var(--accent);
        text-decoration: none;
        font-size: 1rem;
        font-weight: 600;
        transition: color 0.2s ease;
    }
    .contact-link:hover {
        color: var(--accent-ink);
        text-decoration: underline;
    }

    .contact-text {
        color: var(--muted);
        font-size: 1rem;
        line-height: 1.6;
        margin: 0;
    }

    .contact-form-wrapper {
        max-width: 700px;
        margin: 0 auto;
    }

    .contact-form {
        background: #f7f9fc;
        padding: 2rem;
        border-radius: var(--radius-lg);
        border: 1px solid var(--line);
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        display: block;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: color-mix(in srgb, var(--text) 85%, #333);
        font-size: 0.9375rem;
    }

    .form-group input,
    .form-group textarea {
        width: 100%;
        font-family: inherit;
    }

    .form-group textarea {
        resize: vertical;
    }

    .btn {
        width: 100%;
        justify-content: center;
    }

    @media (max-width: 768px) {
        .contact-section {
            padding: 4rem 1.5rem;
        }

        .contact-title {
            font-size: 2rem;
        }

        .contact-subtitle {
            font-size: 1.125rem;
        }

        .contact-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .contact-form {
            padding: 1.5rem;
        }

        .form-row {
            grid-template-columns: 1fr;
            gap: 0;
        }
    }
</style>
