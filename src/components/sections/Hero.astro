<div class="hero grid-ambient" id="home">
    <div class="hero-content">
        <p class="kicker">Advanced Medical Data Platform</p>
        <h1 class="hero-title display-1">
            <span class="title-main">Medi</span>
            <span class="title-main">Strata</span><span class="title-plus"
                >+</span
            >
        </h1>
        <p class="hero-tagline">
            Medical data management & intelligent analytics
        </p>
        <p class="hero-description">
            Transforming healthcare data into actionable insights with
            enterprise-grade security, seamless integration, and intelligent
            analytics.
        </p>
        <div class="hero-cta">
            <a href="#contact" class="btn btn-primary">Get Started</a>
            <a href="#features" class="btn btn-outline">Learn More</a>
        </div>
    </div>
</div>

<style>
    .hero {
        min-height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(180deg, #ffffff 0%, #fafcff 100%);
        padding: 7rem 2rem 4rem;
        position: relative;
    }

    .hero::before {
        content: "";
        position: absolute;
        inset: 0;
        background: radial-gradient(
                800px 400px at 80% 15%,
                color-mix(in srgb, var(--accent) 7%, transparent),
                transparent 60%
            ),
            radial-gradient(
                1000px 500px at 10% 40%,
                color-mix(in srgb, var(--accent) 6%, transparent),
                transparent 65%
            );
        pointer-events: none;
    }

    .hero-content {
        max-width: 980px;
        text-align: center;
        position: relative;
        z-index: 1;
    }

    .hero-title {
        margin: 0.25rem 0 1rem 0;
    }

    .title-main {
        display: inline;
        margin-right: 0.1rem;
    }

    .title-plus {
        font-weight: 800;
        color: var(--accent);
        margin-left: 0.2rem;
        text-shadow: 0 0 0 rgba(10, 132, 255, 0);
    }

    .hero-tagline {
        font-size: clamp(1.05rem, 2.2vw, 1.35rem);
        font-weight: 600;
        color: color-mix(in srgb, var(--text) 85%, #444);
        margin: 0.25rem 0 1.25rem 0;
        letter-spacing: -0.01em;
    }

    .hero-description {
        font-size: clamp(1rem, 2vw, 1.125rem);
        line-height: 1.75;
        color: var(--muted);
        margin: 0 0 2rem 0;
        max-width: 720px;
        margin-left: auto;
        margin-right: auto;
    }

    .hero-cta {
        display: flex;
        gap: 0.9rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    @media (max-width: 768px) {
        .hero {
            min-height: 84vh;
            padding: 6rem 1.25rem 3rem;
        }

        .hero-tagline {
            font-size: 1.05rem;
        }

        .hero-description {
            font-size: 1rem;
        }

        .hero-cta {
            flex-direction: column;
            align-items: stretch;
            gap: 0.75rem;
        }
    }
</style>
