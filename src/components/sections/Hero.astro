---
import CustomButton from "@/components/CustomButton.astro";
import "@/styles/hero.css";
---

<div class="hero grid-ambient" id="home">
    <div class="hero-content">
        <p class="kicker">Advanced Medical Data Platform</p>
        <h1 class="hero-title display-1">
            <span class="title-main">Medi</span>
            <span class="title-main">Strata</span><span class="title-plus"
                >+</span
            >
        </h1>
        <p class="hero-tagline">
            Medical data management & intelligent analytics
        </p>
        <p class="hero-description">
            Transforming healthcare data into actionable insights with
            enterprise-grade security, seamless integration, and intelligent
            analytics.
        </p>
        <div class="hero-cta">
            <CustomButton
                hoverEffect="creative-fill"
                label="Get Started"
                url="#contact"
            />
            <CustomButton
                hoverEffect="text-flip"
                label="Learn More"
                url="#features"
            />
        </div>
    </div>
</div>
